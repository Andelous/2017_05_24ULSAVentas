@using _2017_05_24ULSAVentas.Models
@model List<Publicacion>

@{
    ViewBag.Title = "Inicio";
    ViewBag.layoutPaginaActiva = "inicio";
}

<div class="jumbotron">
    <h1><span class="glyphicon glyphicon-shopping-cart"></span> ULSA Ventas</h1>
    
    <p class="lead">
        Bienvenido a ULSA Ventas, el lugar donde comprar y vender tus cosas.
    </p>
</div>

@if (Model.Count > 0)
{
    <h3 class="page-header">Productos que quizá te interesen</h3>
    <div class="row">

        @foreach (Publicacion p in Model)
        {
            <div class="col-md-4">
                
                <div class="row">

                    <div class="col-md-6">
                        @Html.Partial("~/Views/Publicacion/Imagen.cshtml", p)
                    </div>

                    <div class="col-md-6">
                        @Html.Partial("~/Views/Publicacion/Descripcion.cshtml", p, new ViewDataDictionary { { "longitudCadena", 50 } })
                    </div>

                </div>

            </div>
        }

    </div>
}
else
{
    <div class="alert alert-info">
        Ups, parece que aún no hay publicaciones ¡Sé el primero en publicar!
    </div>
}

<br />
<hr />

<div class="row">
    @if (!Request.IsAuthenticated)
    {
        <div class="col-md-4">
            <h2>¡Comienza ya!</h2>
            <p>
                Crea una cuenta y comienza a comprar y vender.
            </p>
            <p><a class="btn btn-success btn-block" href="@Url.Action("Register", "Account")">Regístrate <span class="glyphicon glyphicon-user"></span></a></p>
        </div>
        <div class="col-md-4">
            <h2>¿Ya eres miembro?</h2>
            <p>Inicia sesión para ver tus compras y ventas.</p>
            <p><a class="btn btn-primary btn-block" href="@Url.Action("Login", "Account")">Iniciar sesión <span class="glyphicon glyphicon-log-in"></span></a></p>
        </div>
    }
    <div class="@(Request.IsAuthenticated ? "col-md-12" : "col-md-4")">
        <h2>Proyecto escolar</h2>
        <p>Proyecto escolar para la materia Desarrollo Web II. Universidad LaSalle Oaxaca</p>
    </div>
</div>
