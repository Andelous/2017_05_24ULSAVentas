@using _2017_05_24ULSAVentas.Models
@model Telefono

@{
    bool? telefonoTelefonoModificado = (bool?)TempData["telefonoTelefonoModificado"];
}

@if (telefonoTelefonoModificado == true)
{
    <div class="alert alert-success">
        Teléfono modificado con éxito.
    </div>
}
else if (telefonoTelefonoModificado == false)
{
    <div class="alert alert-danger">
        No se ha modificado el teléfono.
    </div>
}

@using (Ajax.BeginForm("ModificarTelefono", "Telefono", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "divModificarTelefono", HttpMethod = "POST" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(t => t.idTelefono)

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(t => t.numero)
                @Html.TextBoxFor(t => t.numero, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-12"><input type="submit" class="btn btn-success btn-block" value="Actualizar" /></div>
    </div>
}

@{
    TempData["telefonoTelefonoModificado"] = null;
}