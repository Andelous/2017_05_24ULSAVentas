@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string cuentaPaginaActiva = ViewBag.cuentaPaginaActiva;
    ViewBag.homePaginaActiva = "cuenta";
}

<div class="row">
    <div class="col-sm-3">
        
        <h2 class="page-header text-center"><span class="glyphicon glyphicon-cog"></span> Opciones</h2>

        <div class="btn-group-vertical" style="width:100%;">
            <a class="btn btn-default btn-lg @(cuentaPaginaActiva == "resumen" ? "active" : "")" style="text-align:left;">
                <span class="glyphicon glyphicon-th-list"></span> &nbsp;&nbsp;Resumen</a>
            <a class="btn btn-default btn-lg @(cuentaPaginaActiva == "informacion" ? "active" : "")" style="text-align:left;">
                <span class="glyphicon glyphicon-info-sign"></span> &nbsp;&nbsp;Información de perfil</a>
            <a class="btn btn-default btn-lg @(cuentaPaginaActiva == "publicaciones" ? "active" : "")" style="text-align:left;">
                <span class="glyphicon glyphicon-tags"></span> &nbsp;&nbsp;Mis publicaciones</a>
            <a class="btn btn-default btn-lg @(cuentaPaginaActiva == "favoritos" ? "active" : "")" style="text-align:left;">
                <span class="glyphicon glyphicon-heart"></span> &nbsp;&nbsp;Mis favoritos</a>
            <a class="btn btn-default btn-lg @(cuentaPaginaActiva == "compras" ? "active" : "")" style="text-align:left;">
                <span class="glyphicon glyphicon-usd"></span> &nbsp;&nbsp;Mis compras</a>
        </div>

    </div>

    <div class="col-sm-9">
        @RenderBody()
    </div>
</div>

