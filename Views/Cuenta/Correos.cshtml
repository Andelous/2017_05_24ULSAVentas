@using _2017_05_24ULSAVentas.Models
@model List<Correo>

<div>
    <p>
        <a href="#"><span class="glyphicon glyphicon-plus"></span> Agregar</a>
    </p>
</div>

@if (Model.Count > 0)
{
    <table class="table table-condensed table-hover">
        <tr>
            <th>
                Correo
            </th>
            <th>
                Acciones
            </th>
        </tr>
        @foreach (Correo c in Model)
        {
            <tr>
                <td>
                    @c.direccionDeCorreo
                </td>
                <td>
                    <a href="#">Eliminar</a> | <a href="#">Modificar</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-info">Sin direcciones de correo electrónico</div>
}
